<% layout('layouts/boilerplate') %>

<div class="container mt-5">
    <h1 class="text-center mb-4">Alumni Profile</h1>
    
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="card-title"><%= alumni.name %></h2>
            <p class="card-text"><strong>Graduation Year:</strong> <%= alumni.graduationYear %></p>
            <p class="card-text"><strong>Major:</strong> <%= alumni.major %></p>
            <p class="card-text"><strong>Current Position:</strong> <%= alumni.currentPosition %></p>
            <p class="card-text"><strong>Bio:</strong> <%= alumni.bio %></p>
            
            <% if(currentUser && currentUser.role==='staff' && alumni.createdBy.equals(currentUser.id)) { %>
                <div class="d-flex justify-content-between mt-4">
                    <a class="btn btn-primary" href="/alumni/<%= alumni.id %>/edit">Edit</a>
                    <form action="/alumni/<%= alumni.id %>/?_method=DELETE" method="POST" style="display:inline;">
                        <button class="btn btn-danger" type="submit">Delete</button>
                    </form>
                </div>
            <% } %>
        </div>
    </div>
</div>
