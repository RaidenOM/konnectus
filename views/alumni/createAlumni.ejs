<% layout('layouts/boilerplate') %>

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0 text-center">Add Alumni</h2>
                </div>
                <div class="card-body p-4">
                    <form action="/alumni" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
                        <!-- User Information Section -->
                        <div class="form-group mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" id="username" name="alumni[username]" required placeholder="Enter username">
                            <div class="valid-feedback">Looks good!</div>
                        </div>

                        <div class="form-group mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="alumni[password]" required placeholder="Enter password">
                            <div class="valid-feedback">Looks good!</div>
                        </div>

                        <div class="form-group mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="alumni[email]" required placeholder="Enter email">
                            <div class="valid-feedback">Looks good!</div>
                        </div>

                        <div class="mb-3">
                            <label for="profilePicture" class="form-label">Profile Picture</label>
                            <input type="file" class="form-control" id="profilePicture" name="alumni[profilePicture]" accept="image/*">
                            <div class="valid-feedback">Looks good!</div>
                        </div>

                        <!-- Alumni Information Section -->
                        <div class="form-group mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" name="alumni[name]" required placeholder="Enter name">
                            <div class="valid-feedback">Looks good!</div>
                        </div>

                        <div class="form-group mb-3">
                            <label for="graduationYear" class="form-label">Graduation Year</label>
                            <input type="text" class="form-control" id="graduationYear" name="alumni[graduationYear]" required placeholder="Enter graduation year">
                            <div class="valid-feedback">Looks good!</div>
                        </div>

                        <div class="form-group mb-3">
                            <label for="major" class="form-label">Major</label>
                            <input type="text" class="form-control" id="major" name="alumni[major]" required placeholder="Enter major">
                            <div class="valid-feedback">Looks good!</div>
                        </div>

                        <div class="form-group mb-3">
                            <label for="position" class="form-label">Current Position</label>
                            <input type="text" class="form-control" id="position" name="alumni[currentPosition]" required placeholder="Enter current position">
                            <div class="valid-feedback">Looks good!</div>
                        </div>

                        <div class="form-group mb-4">
                            <label for="bio" class="form-label">Bio</label>
                            <textarea class="form-control" id="bio" name="alumni[bio]" rows="4" placeholder="Enter bio" required></textarea>
                            <div class="valid-feedback">Looks good!</div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/javascripts/validateForm.js"></script>
