<% layout('layouts/boilerplate') %>

<div class="container mt-5 mb-5">
    <h1 class="mb-5 text-center">List of All Alumni</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="list-group">
                <% for (let alumni of alumnis) { %>
                    <a href="/alumni/<%= alumni.id %>" class="list-group-item list-group-item-action mb-3 shadow-sm">
                        <div class="d-flex align-items-center">
                            <!-- Profile Picture -->
                            <img src="<%= alumni.userId.profilePicture %>" alt="Profile Picture" class="rounded-circle" style="width: 60px; height: 60px; object-fit: cover; margin-right: 15px;">
                            <div class="w-100">
                                <div class="d-flex justify-content-between">
                                    <h5 class="mb-1"><%= alumni.name %></h5>
                                    <!-- Display the time ago -->
                                    <small class="text-muted" data-time="<%= alumni.createdAt.toISOString() %>">Loading...</small>
                                </div>
                                <p class="mb-1"><%= alumni.bio %></p>
                                <small class="text-muted">Current position: <%= alumni.currentPosition %></small>
                            </div>
                        </div>
                    </a>
                <% } %>

                <% if (alumnis.length === 0) { %>
                    <div class="alert alert-warning text-center" role="alert">
                        No alumni found. Please add some alumni to the list.
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/timeago.js@4.0.2/dist/timeago.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Convert all elements with data-time attributes to "time ago" format
        const timeElements = document.querySelectorAll('[data-time]');
        timeElements.forEach(element => {
            const time = element.getAttribute('data-time');
            element.innerText = timeago.format(time);
        });
    });
</script>
