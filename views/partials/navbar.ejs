    <div class="container-fluid">
        <a class="navbar-brand" href="#">Konnectus</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <div class="navbar-nav">
                <a class="nav-link" href="/">Home</a>
                <a class="nav-link" href="/alumni">Alumnis</a>
                <a href="/events" class="nav-link">Events</a>
                <a href="#" class="nav-link">Donation Money</a>
                <a href="/jobs" class="nav-link">Job Postings</a>
                <a href="/testimonial" class="nav-link">Testimonial</a>
            </div>
            <div class="navbar-nav ms-auto">
                <% if (!currentUser) { %>
                    <a href="/login" class="nav-link">Login</a>
                    <a href="/register" class="nav-link">Register</a>
                <% } else { %>
                    <a href="/profile" class="nav-link">Profile</a>
                    <% if(currentUser.role === 'alumni') { %>
                        <a href="/testimonial/new" class="nav-link">Add Testimonial</a>
                    <% } %>
                    <% if (currentUser.role === 'student') { %>
                        <a href="#" class="nav-link">Donate</a>
