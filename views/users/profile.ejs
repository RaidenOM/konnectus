<% layout('layouts/boilerplate') %>

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-info text-white text-center">
                    <h2 class="mb-0">User Profile</h2>
                </div>
                <div class="card-body p-4">
                    <!-- Profile Picture -->
                    <div class="text-center mb-4">
                        <img src="<%= user.profilePicture %>" alt="Profile Picture" class="img-fluid rounded-circle" style="width: 150px; height: 150px;">
                    </div>

                    <h3 class="card-title text-center mb-4"><%= user.username %></h3>
                    
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Email:</strong>
                            <span class="text-muted"><%= user.email %></span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>ID:</strong>
                            <span class="text-muted"><%= user.id %></span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Role:</strong>
                            <span class="text-muted"><%= user.role %></span>
                        </li>
                    </ul>

                    <% if (userDetails) { %>
                        <div class="mt-4">
                            <% if (user.role === 'student') { %>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <strong>Name:</strong>
                                        <span class="text-muted"><%= userDetails.name %></span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <strong>Graduation Year:</strong>
                                        <span class="text-muted"><%= userDetails.graduationYear %></span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <strong>Major:</strong>
                                        <span class="text-muted"><%= userDetails.major %></span>
                                    </li>
                                </ul>
                            <% } else if (user.role === 'staff') { %>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <strong>Name:</strong>
                                        <span class="text-muted"><%= userDetails.name %></span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <strong>Current Position:</strong>
                                        <span class="text-muted"><%= userDetails.currentPosition %></span>
                                    </li>
                                </ul>
                            <% } else if (user.role === 'alumni') { %>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <strong>Name:</strong>
                                        <span class="text-muted"><%= userDetails.name %></span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <strong>Graduation Year:</strong>
                                        <span class="text-muted"><%= userDetails.graduationYear %></span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <strong>Major:</strong>
                                        <span class="text-muted"><%= userDetails.major %></span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <strong>Current Position:</strong>
                                        <span class="text-muted"><%= userDetails.currentPosition %></span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <strong>Bio:</strong>
                                        <span class="text-muted"><%= userDetails.bio || 'N/A' %></span>
                                    </li>
                                </ul>
                            <% } %>
                        </div>
                    <% } else { %>
                        <div class="alert alert-warning" role="alert">
                            No additional details found.
                        </div>
                    <% } %>
                    
                    <div class="d-grid gap-2 mt-4">
                        <a href="/alumni" class="btn btn-primary btn-lg">Back to Alumni List</a>
                        <form action="/profile/?_method=DELETE" method="post">
                            <button type="submit" class="btn btn-danger btn-lg" style="width: 100%;">Delete Profile</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }
    .card {
        border-radius: 10px;
    }
    .card-header {
        background-color: #17a2b8; /* Bootstrap info color */
        color: white;
    }
    .text-muted {
        color: #6c757d;
    }
</style>
