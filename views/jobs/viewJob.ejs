<% layout('layouts/boilerplate') %>

<div class="container my-5">
    <h1 class="text-center mb-4 display-4"><%= job.title %></h1>
    <h6 class="text-center mb-4 text-muted"><%= job.company %></h6>

    <div class="card mb-4 shadow-lg">
        <div class="card-body">
            <h5 class="card-title">Job Details</h5>
            <p class="card-text"><strong>Location:</strong> <span class="badge bg-primary"><%= job.location %></span></p>
            <p class="card-text"><strong>Description:</strong> <%= job.description %></p>
            <p class="card-text"><strong>Posted by:</strong> <%= job.postedBy ? job.postedBy.name : 'Unknown' %></p>
            <p class="card-text"><strong>Posted on:</strong> <%= new Date(job.createdAt).toLocaleString() %></p>
        </div>
    </div>

    <div class="text-center mb-4">
        <% if (currentUser && currentUser.role==='alumni' && job.postedBy.equals(currentUser.id)) { %>
            
            <form action="/jobs/<%= job._id %>?_method=DELETE" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger btn-lg me-2" onclick="return confirm('Are you sure you want to delete this job?');">Delete Job</button>
            </form>
        <% } %>
        <a href="/jobs" class="btn btn-secondary btn-lg">Back to Job Listings</a>
    </div>
</div>
