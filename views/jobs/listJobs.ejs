<% layout('layouts/boilerplate') %>

<div class="container my-5 bg-light rounded p-4 shadow">
    <h1 class="text-center mb-4">Job Postings</h1>

    <% if(currentUser && currentUser.role==='alumni') { %>
        <div class="text-center mb-4">
            <a href="/jobs/new" class="btn btn-primary btn-lg">Post a Job</a>
        </div>
    <% } %>

    <div class="row">
        <% jobs.forEach(job => { %>
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-light hover-effect">
                    <div class="card-body">
                        <h5 class="card-title"><%= job.title %></h5>
                        <h6 class="card-subtitle mb-2 text-muted"><%= job.company %></h6>
                        <p class="card-text"><strong>Location:</strong> <%= job.location %></p>
                        <p class="card-text">
                            <strong>Description:</strong> 
                            <%= job.description.length > 100 ? job.description.substring(0, 97) + '...' : job.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                Posted by: <%= job.postedBy ? job.postedBy.name : 'Unknown' %>
                            </small><br>
                            <small class="text-muted"><%= new Date(job.createdAt).toLocaleString() %></small>
                        </p>
                    </div>
                    <div class="card-footer text-muted d-flex justify-content-between align-items-center">
                        <small>Posted on: <%= new Date(job.createdAt).toLocaleDateString() %></small>
                        <a href="/jobs/<%= job._id %>" class="btn btn-info btn-sm">View Posting</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>

    <% if (jobs.length === 0) { %>
        <div class="alert alert-warning text-center" role="alert">
            No job postings available at the moment.
        </div>
    <% } %>
</div>

<!-- Add the hover effect using custom CSS -->
<style>
    .hover-effect {
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .hover-effect:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }
</style>
